# Environment
NODE_ENV=development
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=vitas
DB_PASSWORD=vitas_dev_password
DB_DATABASE=vitas_db

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET_NAME=vitas-uploads
AWS_S3_ENDPOINT=
# Para MinIO local: AWS_S3_ENDPOINT=http://localhost:9000

# Upload Settings
MAX_FILE_SIZE=10485760
# 10MB = 10 * 1024 * 1024
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Email (para reset de senha, etc)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@vitas.com
SMTP_PASSWORD=email-password
SMTP_FROM="VITAS <noreply@vitas.com>"

# Firebase (Push Notifications)
FIREBASE_CONFIG={"type":"service_account","project_id":"..."}
# Obter arquivo JSON da Google Cloud Console
# https://console.firebase.google.com/project/{PROJECT_ID}/settings/serviceaccounts/adminsdk
